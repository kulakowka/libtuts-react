.layout
  max-width 1024px
  position relative
  margin -60px auto -61px
  padding 80px 0 80px
  z-index 1
  min-height 100%

.app,
html, 
body,
body > div
  min-height 100%
  height 100%
  padding 0
  margin 0

html
  height 100%

body 
  
  color #222
  background #fafafa !important
  
body,
input,
select,
textarea,
button
  font-size 14px 
  font-family 'Roboto', sans-serif

* 
  box-sizing border-box
img
  max-width 100%
  
blockquote
  margin 1em 0 
  padding 0
  font-size 1.3em
  position relative
  &:after
    content ''
    position absolute
    left -20px
    top 0
    bottom 0
    width 4px
    background deeppink
hr
  margin 1.5em auto
  // max-width 60%
  padding 0
  border 0
  height 1px 
  background #eee
  

a
  text-decoration none
  color dodgerblue
  &:hover
    text-decoration underline
  // &:visited
  //   color mediumorchid

