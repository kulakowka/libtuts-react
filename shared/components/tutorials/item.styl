.item
  margin 1.2em 0
  &:first-child
    margin-top 0
  &:last-child
    margin-bottom 0
  h3
    font-size 1.2em
    font-weight bold
    margin 0 0 3px
    a
      color #222
    a:visited
      color #aaa

.meta
  white-space nowrap
  color grey
  font-size 0.9em
  a
    color grey
  a + a
    margin-left 10px
